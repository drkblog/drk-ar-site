grammar SiDiLa
  body <- (@ws (turn / move / back / shoot / loop) @ws @nl)*
  loop <- 'mientras' @ws condition @ws @'(' @nl body @nl @')' %makeLoop
  condition <- not @ws 'hay' @ws sprite @ws 'adelante' %makeCondition
  not <- 'no'?
  sprite <- ('pared' / 'algo' / 'zombie' / 'espacio')
  move <- 'avanzar' %makeMove
  back <- 'retroceder' %makeBack
  shoot <- 'disparar' %makeShoot
  turn <- 'girar' @ws @'hacia la' @ws direction %makeTurn
  direction <- ('izquierda' / 'derecha')
  ws <- ([ \t]+)*
  nl <- ([\r\n]+)*